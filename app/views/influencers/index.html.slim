- content_for :highlight do
  .row
    .links= link_to "Novo influenciador", new_influencer_path, :class => "icon-contact"

section.content
  .row  
    .influencers_list
      h2 Lista de Influenciadores
      table
        - Influencer.all.each do |influencer|
          tr
            td= image_tag influencer.avatar.square
            td= link_to influencer.name, influencer
            td= influencer.role
            td= influencer.email
            td= "@#{influencer.twitter}" if !influencer.twitter.blank?
            td= link_to "Facebook", influencer.facebook if !influencer.facebook.blank?
